<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/color_light_gray</item>
    </style>

    <!-- 自定义loading dialog -->
    <!--android:backgroundDimEnabled：表示页面是否变暗，我们设置false，不变暗
    android:windowBackground：表示背景颜色，这里设置为透明-->
    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!--给启动的activity设置一个背景主题，这样可以消除启动时候的白色背景-->
    <style name="AppStartTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/login_bg</item>
    </style>

    <!--深灰包裹15文本样式-->
    <style name="text_wrap_15_dark_style">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/color_dark_gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--按钮样式-->
    <style name="button_style">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/blue_bg_radius_4</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <!--编辑框样式-->
    <style name="edit_style">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/color_light_black</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:hint">请输入</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="simpleDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
