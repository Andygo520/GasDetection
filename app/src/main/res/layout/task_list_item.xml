<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/white_bg_radius_4"
    android:divider="@mipmap/dottedline"
    android:showDividers="middle"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李大一"
                android:textColor="#333333"
                android:textSize="16sp"
                android:drawableLeft="@mipmap/list_name_icon"
                android:drawablePadding="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tvNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12548451561588"
                android:textColor="#666666"
                android:textSize="14sp"
                android:drawableLeft="@mipmap/list_num_icon"
                android:drawablePadding="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tvLocate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="四新大道"
                android:textColor="#666666"
                android:textSize="14sp"
                android:drawableLeft="@mipmap/list_posi_icon"
                android:drawablePadding="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@mipmap/check_ok_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="14sp"
        android:gravity="center"
        android:text="待安检"
        android:textColor="#58bdee"
        />
</LinearLayout>